{
  "name": "tiramisu",
  "description": "pick-me-up",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/tiramisu-16.png",
      "32": "/images/tiramisu-32.png",
      "48": "/images/tiramisu-48.png",
      "128": "/images/tiramisu-128.png"
    }
  },
  "icons": {
    "16": "/images/tiramisu-16.png",
    "32": "/images/tiramisu-32.png",
    "48": "/images/tiramisu-48.png",
    "128": "/images/tiramisu-128.png"
  } 
}